{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd":"${workspaceRoot}/build"
    },
    "tasks": [
        {
            "label": "rsync",
            "type": "shell",
            "command": "rsync",
            "args": [
                "-az",
                "-e ssh -p 2222",
                "~/tmp/benchmarks",
                "max@159.69.202.10:~/"
            ]
        },
        {   
            "label": "remote cmake",
            "type": "shell",
            "command": "ssh",
            "args": [
                "-t",
                "-p 2222",
                "max@159.69.202.10",
                "cd ~/benchmarks/build && cmake -DCMAKE_BUILD_TYPE=Release -DBOOST_ROOT=/home/max/libs/boost_1_68_0 BOOST_LIBRARY_DIRS=/home/max/libs/boost_1_68_0/stage/lib .."
            ],
            "dependsOn": [
                "rsync"
            ]
        },
        {
            "label": "remote make",
            "type": "shell",
            "command": "ssh",
            "args": [
                "-t",
                "-p 2222",
                "max@159.69.202.10",
                "cd ~/benchmarks/build && make -j2"
            ],
            "dependsOn":[
                "remote cmake"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "execute",
            "type": "shell",
            "command": "ssh",
            "args": [
                "-t",
                "-p 2222",
                "max@127.0.0.1",
                "/home/max/benchmarks/build/TetsCMakeMacos -c3"
            ],
            "dependsOn":[
                "remote make"
            ]
        }
